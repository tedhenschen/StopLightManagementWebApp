
@model IEnumerable<StopLightManagement.Models.Meeting>

@{
    ViewData["Title"] = "Meetings";
}


<h1>Meetings</h1>

<p>
    <a asp-action=""> Add Meeting</a>
</p>

<div>
    <h4> Meetings </h4>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TierLevel)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Frequency)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Site.SiteCode)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TierLevel)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Frequency)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Site.SiteCode)
                    </td>
                    <td>
                        <a asp-action="OrganizationDetails" asp-route-id="@item.ID">OrganizationDetails</a> |
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>